<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativelayoutorta"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:layout_below="@id/relativelayout1">

        <EditText
            android:id="@+id/editTextAciklama"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:ems="10"
            android:gravity="top"
            android:hint="Açıklama"
            android:inputType="textMultiLine"
            android:singleLine="false" />

        <Button
            android:id="@+id/buttonKaydet"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_below="@id/editTextAciklama"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            android:text="Gönder"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout

        android:id="@+id/relativelayout1"

        android:layout_width="match_parent"
        android:layout_height="274dp">

        <TextView
            android:id="@+id/textViewTarihKimAtti"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewYapilanIs"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="219dp"
            android:layout_marginRight="219dp"
            android:text="21.07.2014"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewBaslikkk"
            android:layout_width="124dp"
            android:layout_height="37dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="139dp"
            android:layout_marginRight="139dp"
            android:text="BAŞLIK"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewYapilanIs"
            android:textStyle="bold"
            android:layout_width="378dp"
            android:layout_height="70dp"
            android:layout_below="@id/textViewBaslikkk"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:text="Birinci binanın tüm kapıları temizle.Daha sonra tüm pencereleri aç." />

        <TextView
            android:id="@+id/textViewKimAtti"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_below="@id/textViewTarihKimAtti"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="144dp"
            android:layout_marginRight="144dp"
            android:text="Kim attı:Mehmet Altun"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewAcilll"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewKimAtti"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="166dp"
            android:layout_marginRight="166dp"
            android:text="Acil"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewTarihKimeAtti"
            android:layout_width="122dp"
            android:layout_height="29dp"
            android:layout_below="@id/textViewYapilanIs"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="56dp"
            android:layout_marginRight="56dp"
            android:text="24.07.2015"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativelayoutorta">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvorta"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout3"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:background="#000080"
        android:layout_below="@id/relativelayout2"
        android:layout_marginTop="0dp">

        <Button
            android:id="@+id/buttonBitir"
            android:layout_width="75dp"
            android:layout_height="36dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="Bitir" />
    </RelativeLayout>
</RelativeLayout>