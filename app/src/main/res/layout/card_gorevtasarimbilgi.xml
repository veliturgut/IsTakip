<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/cardgorevtasarim"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"

        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewBaslikGorevBilgi"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="186dp"
                android:layout_marginRight="186dp"
                android:text="Başlık"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="248dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewBaslikGorevBilgi"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="9dp"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="14dp"
                android:checked="false"
                android:text="A binasi Temizlendi" />

            <ImageView
                android:id="@+id/imageViewnfc"
                android:layout_width="46dp"
                android:layout_height="33dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="97dp"
                android:layout_marginRight="97dp"
                app:srcCompat="@drawable/nfc" />

            <ImageView
                android:id="@+id/imageViewkamera"
                android:layout_width="44dp"
                android:layout_height="34dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:clickable="false"
                app:srcCompat="@drawable/kamera" />

            <TextView
                android:id="@+id/textViewNfcYer"
                android:layout_width="127dp"
                android:layout_height="34dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="46dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:text="A3B2C1"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageViewGpsResim"
                android:layout_width="43dp"
                android:layout_height="33dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:layout_toStartOf="@+id/imageViewkamera"
                android:layout_toLeftOf="@+id/imageViewkamera"
                app:srcCompat="@drawable/gpsresim" />

            <TextView
                android:id="@+id/textViewvaryok"
                android:layout_width="49dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="7dp"
                android:text="yok"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textViewnfcvaryok"
                android:layout_width="41dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="56dp"
                android:layout_marginLeft="56dp"
                android:layout_marginTop="7dp"
                android:text="yok"
                android:visibility="invisible" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>