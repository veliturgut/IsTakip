<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/cardgorevtasarim"
        android:layout_width="match_parent"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"

        android:layout_margin="5dp"
        android:layout_height="150dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewBaslikGorevBilgi"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="174dp"
                android:layout_marginRight="174dp"
                android:text="Başlık"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewYapilanIsGorevBilgi"
                android:layout_width="363dp"
                android:layout_height="47dp"
                android:layout_below="@id/textViewBaslikGorevBilgi"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="22dp"
                android:layout_marginRight="22dp"
                android:text="Yapilacak İş" />

            <TextView
                android:textStyle="bold"
                android:textSize="18dp"
                android:id="@+id/textViewTarihGorevBilgi"
                android:layout_width="wrap_content"
                android:layout_below="@id/textViewYapilanIsGorevBilgi"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="189dp"
                android:layout_marginRight="189dp"
                android:text="22.07.2017" />

            <TextView
                android:id="@+id/textViewAcilGorevBilgi"
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTarihGorevBilgi"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="173dp"
                android:layout_marginRight="173dp"
                android:text="Normal"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>